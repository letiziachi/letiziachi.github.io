---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import ProjectItem from "../../../components/ProjectItem.astro";
import { getCollection } from "astro:content";
// import HorizontalCard from "@components/HorizontalCard.astro";

export function letiziaCommunicationOrder(collection)
{
  // Sort by display priority
  return collection.sort((a, b) => b.data.displayPriority - a.data.displayPriority)
  // by date
  // collection.sort((a, b) => b.data.updatedDate.valueOf() - a.data.updatedDate.valueOf());
}

export async function getStaticPaths({ paginate }) {
  const items = letiziaCommunicationOrder(await getCollection("communication"));
  // by date
  // items.sort((a, b) => b.data.updatedDate.valueOf() - a.data.updatedDate.valueOf());
  return paginate(items, { pageSize: 10 });
}
const { page } = Astro.props;
---

<BaseLayout title="Comunicazione" sideBarActiveItemID="communication">

  <!-- <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Projects Header</div>
  </div> -->

  <!-- <HorizontalCard
    title="Progetto statico custom"
    coverImage="/post_img.webp"
    desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
    url="#"
    badge="statico"
  /> -->

  <div class="flex flex-wrap justify-around projects-container">
    {
      letiziaCommunicationOrder(page.data).map((item) => (
        <>
          <ProjectItem
            title={item.data.title}
            images={item.data.images}
            coverImage={item.data.coverImage}
            desc={item.data.description}
            badge={item.data.badge}
            details={item.data.details}
            tags={item.data.tags}
            url={"/communication/" + item.slug}
            customCssClass={item.data.customCssClass}
            customImageFormat={item.data.customImageFormat}
          />
        </>
      ))
    }
  </div>


  <!-- PAGER -->
  <div class="flex justify-between">
    {
      page.url.prev ? (
        <a href={page.url.prev} class="btn btn-ghost my-10 mx-5 font-black text-2xl">←</a>
      ) : (
        <div />
      )
    }
    {
      page.url.next ? (
        <a href={page.url.next} class="btn btn-ghost my-10 mx-5 font-black text-2xl">→</a>
      ) : (
        <div />
      )
    }
  </div>
</BaseLayout>
